<main id="search">
  <section class="game-search">
    <h1>Search</h1>

    <form class="search-form" method="get">
      <input
        type="text"
        class="search-game"
        name="search"
        value="{{filter.search}}"
        placeholder="Search here..."
      />
      <select id="platform" name="platform">
       
                    {{>options}}
                  
      </select>
      <button type="submit" class="btn-search">Search</button>
    </form>

    <div class="search-result">
      <div class="search-list">
        {{#each games}}
            {{>game}}
        {{else}}
          <div class="no-match">
            <p>No match was found!</p>
          </div>
        {{/each}}
      </div>
    </div>

    <!-- <div class="no-match">
                <p>No match was found!</p>
            </div> -->
  </section>
</main>